            <Button
                android:id="@+id/asia"
                style="@style/MainText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:background="@drawable/android_asia"
                android:onClick="onClick"
                android:text="Asia" />

            <Button
                android:id="@+id/europe"
                style="@style/MainText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/asia"
                android:layout_alignLeft="@+id/asia"
                android:background="@drawable/android_europe"
                android:onClick="onClick"
                android:text="Europe" />

            <Button
                android:id="@+id/americas"
                style="@style/MainText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/asia"
                android:layout_below="@+id/asia"
                android:background="@drawable/android_americas"
                android:onClick="onClick"
                android:text="Americas" />

</RelativeLayout>