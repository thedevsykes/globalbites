<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:gravity="center_horizontal"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".AmericasView" >

    <Button
        android:id="@+id/usa"
        style="@style/MainText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp"
        android:background="@drawable/android_button"
        android:onClick="onClick"
        android:text="USA" />

    <Button
        android:id="@+id/brazillian"
        style="@style/MainText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/usa"
        android:layout_centerHorizontal="true"
        android:background="@drawable/android_button"
        android:onClick="onClick"
        android:text="Brazillian" />

    <Button
        android:id="@+id/mexican"
        style="@style/MainText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/brazillian"
        android:layout_centerHorizontal="true"
        android:background="@drawable/android_button"
        android:onClick="onClick"
        android:text="Mexican" />

    <Button
        android:id="@+id/caribbean"
        style="@style/MainText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/mexican"
        android:layout_centerHorizontal="true"
        android:background="@drawable/android_button"
        android:onClick="onClick"
        android:text="Caribbean" />

    <TextView
        android:id="@+id/copyright"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/caribbean"
        android:text="@string/copyright"
        android:textAppearance="?android:attr/textAppearanceSmall" />

</RelativeLayout>