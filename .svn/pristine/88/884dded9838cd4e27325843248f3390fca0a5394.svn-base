<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".EuropeViews" >

    <Button
        android:id="@+id/english"
        style="@style/MainText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="@drawable/android_button"
        android:onClick="onClick"
        android:text="English" />

    <Button
        android:id="@+id/french"
        style="@style/MainText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/english"
        android:layout_centerHorizontal="true"
        android:background="@drawable/android_button"
        android:onClick="onClick"
        android:text="French" />

    <Button
        android:id="@+id/german"
        style="@style/MainText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/french"
        android:layout_centerHorizontal="true"
        android:background="@drawable/android_button"
        android:onClick="onClick"
        android:text="German" />

    <Button
        android:id="@+id/greek"
        style="@style/MainText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/german"
        android:layout_centerHorizontal="true"
        android:background="@drawable/android_button"
        android:onClick="onClick"
        android:text="Greek" />

    <Button
        android:id="@+id/italian"
        style="@style/MainText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/greek"
        android:layout_centerHorizontal="true"
        android:background="@drawable/android_button"
        android:onClick="onClick"
        android:text="Italian" />

    <Button
        android:id="@+id/polish"
        style="@style/MainText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/italian"
        android:layout_centerHorizontal="true"
        android:background="@drawable/android_button"
        android:onClick="onClick"
        android:text="Polish" />

    <Button
        android:id="@+id/spanish"
        style="@style/MainText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/polish"
        android:layout_centerHorizontal="true"
        android:background="@drawable/android_button"
        android:onClick="onClick"
        android:text="Spanish" />

</RelativeLayout>